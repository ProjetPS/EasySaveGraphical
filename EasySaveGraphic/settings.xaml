<Page x:Class="EasySaveGraphic.settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySaveGraphic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="776"
      Title="settings">

    <Grid Background="#FF393939" Margin="238,10,280,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="203*"/>
            <RowDefinition Height="227*"/>
        </Grid.RowDefinitions>
        <ComboBox HorizontalAlignment="Center" Margin="0,153,0,0" VerticalAlignment="Top" Width="120">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="#FFF6F6F6" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <Label Content="Francais"/>
            <Label Content="English"/>
        </ComboBox>
        <Label Content="Changer de langue" HorizontalAlignment="Center" Margin="0,122,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Button Content="Changer extensions" HorizontalAlignment="Center" VerticalAlignment="Top" Height="38" Width="148" Click="Button_Click" Background="#FF414141" Foreground="White" Margin="0,196,0,0" Grid.RowSpan="2"/>
        <Button Content="Sauvegarder" HorizontalAlignment="Center" Margin="0,67,0,0" VerticalAlignment="Top" Height="42" Width="148" Background="#FF444444" Foreground="White" Grid.Row="1"/>
        <Label Content="Réglages" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="White" Width="141" FontSize="28"/>

    </Grid>
</Page>
