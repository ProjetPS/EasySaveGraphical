<Window x:Class="EasySaveGraphic.Mainwindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySaveGraphic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Icon="Images\EasySave.ico"
      Title="EasySave">

    <Grid Background="#E8DFCA" AutomationProperties.Name="EasySave">
        <Image Name="FR_btn" Source="/FR_flag.png" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" VerticalAlignment="Top" Width="22" MouseLeftButtonDown="FR_Lang"/>
        <Image Name="EN_btn" Source="/EN_flag.png" HorizontalAlignment="Left" Height="23" Margin="37,10,0,0" VerticalAlignment="Top" Width="22" MouseLeftButtonDown="EN_Lang"/>
        <Button Name="saveList_btn" Content="My worksave list" HorizontalAlignment="Left" Margin="189,217,0,0" VerticalAlignment="Top" Click="WorkSaveList"/>
        <Button Name="createWS_btn" Content="Create a new worksave" HorizontalAlignment="Left" Margin="400,217,0,0" VerticalAlignment="Top" Click="CreateWorkSave"/>
        <Button Name="executeWS_btn" Content="Execute a worksave" HorizontalAlignment="Left" Margin="685,227,0,0" VerticalAlignment="Top" Click="ExecuteWS_Click"/>
    </Grid>
</Window>
